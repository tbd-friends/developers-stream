@page "/"
@namespace site.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>site</title>
    <base href="~/" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Icons" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />

    <environment exclude="Staging,Development">
        <link href="~/lib/materialize/css/materialize.min.css" rel="stylesheet" />
    </environment>
    <environment include="Development">
        <link href="~/lib/materialize/css/materialize.css" rel="stylesheet" />
    </environment>

    <link href="_content/MatBlazor/dist/matBlazor.css" rel="stylesheet" />


</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>

    <script src="_content/MatBlazor/dist/matBlazor.js"></script>
    <script src="~/js/site.js" defer="defer"></script>
</body>
</html>
